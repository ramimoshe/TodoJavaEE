<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.company.todo.model.UserEntity" table="users" schema="" catalog="tododb2">
        <id name="username">
            <column name="username" sql-type="varchar" length="50" not-null="true"/>
        </id>
        <property name="password">
            <column name="password" sql-type="varchar" length="50" not-null="true"/>
        </property>
        <property name="dateCreated">
            <column name="dateCreated" default="now()" sql-type="datetime" not-null="true"/>
        </property>
        <property name="isDeleted">
            <column name="isDeleted" sql-type="BOOLEAN" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>