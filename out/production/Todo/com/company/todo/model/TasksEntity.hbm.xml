<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.company.todo.model.TaskEntity" table="tasks" schema="" catalog="tododb">
        <id name="taskId">
            <column name="id" sql-type="int" not-null="true"/>
            <generator class="increment"></generator>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar" length="1024" not-null="true"/>
        </property>
        <property name="content">
            <column name="content" sql-type="varchar" length="1024" not-null="true"/>
        </property>
        <property name="duedate">
            <column name="duedate" sql-type="date" not-null="true"/>
        </property>
        <property name="dateCreated">
            <column name="dateCreated" default="now()" sql-type="datetime" not-null="true"/>
        </property>
        <property name="userId">
            <column name="userId" sql-type="varchar" not-null="true"/>
        </property>
        <property name="isDeleted">
            <column name="isDeleted" sql-type="BOOLEAN" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>